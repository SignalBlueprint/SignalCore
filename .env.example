# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration (required for database and storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# JWT Configuration (required for authentication)
# Generate a secure random 256-bit secret: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# GitHub Integration (optional, for GitHub sync features)
GITHUB_TOKEN=your_github_token_here

# Slack Notifications (optional)
NOTIFY_SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFY_EMAIL_ENABLED=false

# SendGrid Email Configuration (required for Outreach email campaigns)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=campaigns@yourdomain.com
FROM_NAME=Your Company
EMAIL_RATE_LIMIT=10

# LeadScout Integration (for Outreach campaigns)
LEADSCOUT_URL=http://localhost:4021
LEADSCOUT_ORG_ID=default-org
USE_LEADSCOUT=true

# Storage Mode (optional, defaults to 'supabase' if configured, otherwise 'local')
# Set to 'local' to force local JSON storage
# STORAGE_MODE=local

# Stripe Payment Configuration (required for Catalog payment processing)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
