{
  "name": "questboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:web": "cd web && pnpm run dev",
    "dev:all": "concurrently -n \"API,WEB\" -c \"blue,green\" \"pnpm run dev\" \"pnpm run dev:web\"",
    "build": "tsc -p tsconfig.json && cd web && pnpm install && pnpm run build",
    "build:web": "cd web && pnpm run build",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@sb/ai": "workspace:*",
    "@sb/assignment": "workspace:*",
    "@sb/events": "workspace:*",
    "@sb/notify": "workspace:*",
    "@sb/schemas": "workspace:*",
    "@sb/storage": "workspace:*",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  }
}


